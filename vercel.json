{
  "version": 2,
  "builds": [
    {
      "src": "server/*",
      "use": "@vercel/node"
    },
    {
      "src": "client/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/.*",
      "dest": "/server/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/client/index.html"
    }
  ]
}
